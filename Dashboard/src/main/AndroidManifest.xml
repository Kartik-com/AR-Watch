<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tushar.dashboard">

    <!-- Permissions (if needed) -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dashboard">

        <!-- Unity Activity Declaration -->
        <activity
            android:name="com.unity3d.player.UnityPlayerActivity"
            android:exported="false" />

        <!-- Other Activities -->
        <activity
            android:name=".TutorialActivity"
            android:exported="false" />
        <activity
            android:name=".SupportCenterActivity"
            android:exported="false" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="false" />
        <activity
            android:name=".WorkingOnActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Watch5Activity"
            android:exported="false" />
        <activity
            android:name=".Watch4Activity"
            android:exported="false" />
        <activity
            android:name=".Watch3Activity"
            android:exported="false" />
        <activity
            android:name=".Watch2Activity"
            android:exported="false" />
        <activity
            android:name=".Watch1Activity"
            android:exported="false" />
        <activity
            android:name=".ShoppingActivity"
            android:exported="false" />

        <!-- Main Dashboard Activity -->
        <activity
            android:name=".Dashboard"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>
